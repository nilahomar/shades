<h1>My Products </h1>
<div class="products-container">
  <% @products.each do |product| %>
    <%= link_to sub_product_path(product.sub_products[0]) do %>
      <div class="products-card">
        <div class="heart-icon">
          <%= image_tag "heart.png" %>
        </div>
        <div class="image-price">
          <%= image_tag product.sub_products[0].img_main, alt: "foundation images" %>
          <p class="price">$<%= product.price %></p>
        </div>
        <div class="product-content">
          <h5 class="brand-name"> <%= product.brand_name %> </h5>
          <p> <%= product.description.first(100) %> </p>

        </div>
        <div class="d-flex justify-content-around">
          <p class="my-button">Add to cart</p>
          <p class="my-button">Buy</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
