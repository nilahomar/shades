<h1 class="foundation-heading"> Select your shade </h1>

<div class="image-color-selector-container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-4">
      <div id="color-selector"></div>
      <% if current_user.pic.attached? %>
        <%= image_tag current_user.pic, alt: "user-image", class: "img-color" %>
      <% else %>
        <%= image_tag ("user.png"), class: "user-image-placeholder" %>
      <% end %>
    </div>
    <div class="col-md-4">
      <ul id="shade-pick" style="display: flex; flex-wrap: wrap; list-style-type: none;">
        <% @color_shades.each do |shade| %>
          <%= link_to color_shade_sub_products_path(shade) do %>
            <li style="margin: 5px; height: 40px; width: 40px; background: <%= shade.shade_hex %>;"> </li>
          <% end %>
        <% end %>
      </ul>
      <div>
        <%= simple_form_for :this_user, url: "color_shades", html: { class: "form-upload" } do |f| %>
        <%= f.input :pic, as: :file, direct_upload: true, input_html: { class: "d-none" }, label_html: { class: "upload-photo" }, label: "ðŸ“· Upload a photo" %>
        <%= f.submit "Upload", class: "btn btn-dark button-black" %>
        <% end %>
      </div>
    </div>
  </div>

</div>
