<h1> Products for selected shade</h1>
<% @sub_products.shuffle.each do |sub_product| %>
  <%= link_to sub_product_path(sub_product) do %>
    <div class="card" style="width: 22rem;">
      <%= image_tag sub_product.img_main, class: "card-img-top", alt: 'fun' %>
      <div class="card-body">
        <h5 class="card-title text-dark"> <%= sub_product.product.brand_name%> </h5>
        <h6 class="card-title text-secondary"> <%= sub_product.product.name%> </h6>
        <p class="card-text text-secondary"> <%= sub_product.product.description%> </p>
      </div>
    </div>
  <% end %>
<% end %>
